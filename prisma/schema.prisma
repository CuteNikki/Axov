generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id          Int       @id @default(autoincrement())
  orderIndex  Int?
  // Content
  title       String
  description String?
  // Priority (lower = more important)
  priority    Int?
  // Status derivation (done if completedAt is set, overdue if dueAt is past and not completed, pending otherwise)
  dueAt       DateTime?
  completedAt DateTime?
  // Timestamps
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  // Indexes
  @@index([orderIndex])
  @@index([dueAt])
  @@index([completedAt])
}
